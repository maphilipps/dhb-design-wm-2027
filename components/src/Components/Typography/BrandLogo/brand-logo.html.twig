<div class="brand-logo brand-logo--{{ variant|default('default') }} {{ classes|default('') }}"
  {% if animate %}data-animate="brand-pulse"{% endif %}
  {% if reduced_motion %}data-reduced-motion="true"{% endif %}
  {% if id %} id="{{ id }}"{% endif %}
  role="{{ role|default('img') }}"
  {% if aria_label %} aria-label="{{ aria_label }}"{% else %} aria-label="DHB Handball World Championship {{ brand_text|default('27WM27') }}"{% endif %}
  {% if aria_describedby %} aria-describedby="{{ aria_describedby }}"{% endif %}
  {% if is_link %} tabindex="0"{% endif %}
  {% if sr_only %} aria-hidden="true"{% endif %}>
  {% if sr_only %}
    <span class="sr-only">{{ sr_text|default('DHB Handball World Championship ' ~ brand_text|default('27WM27')) }}</span>
  {% endif %}
  <span class="brand-logo__text" aria-hidden="true">{{ brand_text|default('27WM27') }}</span>
</div>