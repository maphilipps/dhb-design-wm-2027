<{{ tag|default('h1') }} class="heading heading--{{ level|default('1') }} heading--{{ color|default('primary') }} {{ classes|default('') }}"
  {% if id %} id="{{ id }}"{% endif %}
  {% if aria_label %} aria-label="{{ aria_label }}"{% endif %}
  {% if aria_describedby %} aria-describedby="{{ aria_describedby }}"{% endif %}
  {% if aria_level %} aria-level="{{ aria_level }}"{% endif %}
  {% if sr_only %} aria-hidden="true"{% endif %}
  {% if role %} role="{{ role }}"{% endif %}
  tabindex="{{ tabindex|default(-1) }}"
  {% if reduced_motion %} data-reduced-motion="true"{% endif %}>
  {% if sr_only %}
    <span class="sr-only">{{ sr_text|default(text) }}</span>
  {% endif %}
  {{ text|raw }}
</{{ tag|default('h1') }}>